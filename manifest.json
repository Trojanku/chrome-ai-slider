{
  "manifest_version": 3,
  "name": "ai-slider",
  "version": "1.0.0",
  "description": "AI-powered side panel for page Q&A",
  "permissions": [
    "sidePanel",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open ai-slider"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
